<body>
    <!-- Sidenav -->
    <% include ../partials/sidebar %>
    <!-- Main content -->
    <div class="main-content">
      <!-- Top navbar -->
      <% include ../partials/navbar %>
      <!-- Header -->
      <% include ../partials/header %>
      <!-- Page content -->
      <div class="container-fluid mt--7">
        <!-- Dark table -->
        <div class="row mt-5">
          <div class="col">
            <div class="card bg-default shadow">
              <div class="card-header bg-transparent border-0">
                <h3 style="float:left"class="text-white mb-0">Users Management</h3>
                <span style="float:right"><a href="/createUser"><button class="btn btn-success">Create User</button></a></span>
              </div>
              <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                  <thead class="thead-dark">
                    <tr>
                      <th scope="col">Name</th>
                      <th scope="col">Email</th>
                      <th scope="col">Status</th>
                      <th scope="col"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% user.forEach(function(student) { %>
                      <tr>
                        <td><%= student.name %></td>
                        <td><%= student.email %></td>
                        <td><%= student.status===1?'Enable':'Disable' %></td>
                        <td class="text-right">
                          <div class="dropdown">
                            <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              <i class="fas fa-ellipsis-v"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                              <a class="dropdown-item" href="/Edituser/<%=student.id%>">Edit</a>
                              <a class="dropdown-item" href="/changeStatus/<%=student.id%>"><%= student.status===1?'Disable':'Enable' %></a>
                            </div>
                          </div>
                        </td>
                      </tr>
                   <% }); %> 
                  </tbody>
                </table>
                
              </div>
            </div>
          </div>
        </div>
        <!-- Footer -->
        <% include ../partials/footer %>
      </div>
    </div>
  
    <!-- Include scripts -->
    <% include ../partials/scripts %>
  </body>